<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterMovimiento"
    android:background="@drawable/operate"
    android:orientation="vertical"
    android:padding="50dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
    <TextView
        android:id="@+id/textMovimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="REGISTRAR NUEVO MOVIMIENTO"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="179dp"
        tools:layout_editor_absoluteY="18dp" />

    <TextView
        android:id="@+id/textSpiner5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INMUEBLES DISPONIBLES"
        android:textAlignment="center"
        android:textColor="#000000" />
    <Spinner
        android:id="@+id/sppElemee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:popupBackground="#5E5E66"
        android:background="#232E63"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/textSpiner6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AMBIENTES DISPONIBLES"
        android:textAlignment="center"
        android:textColor="#000000" />
    <Spinner
        android:id="@+id/sppAmbii"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:popupBackground="#5E5E66"
        android:background="#232E63"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/editDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoText="false"
        android:ems="10"
        android:hint="Fecha"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnObtenerFecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FECHA" />

    <EditText
        android:id="@+id/editObsevacion"
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Ingrese sus observaciones"
        android:inputType="textMultiLine"
        android:maxLength="50" />

    <Button
        android:id="@+id/btnRegisterMov"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTRAR MOVIMIENTO" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>